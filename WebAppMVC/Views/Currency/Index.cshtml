@model IEnumerable<WebAppMVC.Models.ViewModels.CurrencyViewModel>

@{
	ViewData["Title"] = "Index";
}

<h1>View Currency</h1>

<p>
	<a asp-action="GetCurrency">Update Currency</a>
</p>

<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Date)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Base)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.RateSEK)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.RateUSD)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.RateEUR)
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Date)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Base)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.RateSEK)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.RateUSD)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.RateEUR)
				</td>
			</tr>
		}
	</tbody>
</table>