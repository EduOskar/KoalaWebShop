@model IEnumerable<CartItem>
@{
    ViewData["Title"] = "Index";
}

<h1>PURCHASE COMPLETE - THESE ITEMS ARE NOW BEING SENT TO YOU</h1>
@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelitem => x.Product.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelitem => x.Quantity)
                    </td>
                </tr>    
            }
            
        </tbody>
    </table>
}
<div>
    <a Class="Button btn-light" asp-area="" asp-controller="Home" asp-action="Index"> Return to store </a>
</div>